@model TrashCollector.Models.SetPickupDaysViewModel
@{
    ViewBag.Title = "Pickup Days";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("PickupDays", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Select your pickup day.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })





    <div class="form-group">
        @Html.LabelFor(m => m.PickupDays, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @*@Html.DropDownListFor(m => m.DaysOfWeek, )*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
