@model TrashCollector.Models.SetVacationDaysViewModel
@{
    ViewBag.Title = "Set Vacation Days";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SetVacationDays", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()

<hr />
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="container">
    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "col-md-2 control-label"})
            @Html.EditorFor(model => model.StartDate, new { @placeholder = "dd/mm/yyyy"})
           
            
            <div class="col-md-10">
                
            </div>
        </div>
    </div>
</div>
    <div class="container">
        <div class="row">
            <div class="form-group">
                @Html.Label("End Date", htmlAttributes: new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(model => model.EndDate, "{0:dd/MM/yyyy}")
               
                
                <div class="col-md-10">
                   
                </div>
            </div>
        </div>
    </div>
    <br />
    <br>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" class="btn btn-default" value="Set Vacation Dates" />
        </div>
    </div>
}